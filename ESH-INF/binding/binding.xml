<?xml version="1.0" encoding="UTF-8"?>
<binding:binding id="zonky"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:binding="http://eclipse.org/smarthome/schemas/binding/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/binding/v1.0.0 http://eclipse.org/smarthome/schemas/binding-1.0.0.xsd">

    <name>Zonky</name>
    <description>Gets status from your Zonky account.</description>
    <author>Ondrej Pecta</author>
    
    <service-id>org.openhab.zonky</service-id>
    <config-description>
        <parameter name="refresh" type="integer">
            <label>Refresh interval</label>
            <description>Data refresh interval in milliseconds.</description>
            <default>60000</default>
        </parameter>
        <parameter name="username" type="text" required="true">
            <label>Your Zonky user name (email).</label>
        </parameter>
        <parameter name="password" type="text" required="true">
            <label>Your Zonky password.</label>
        </parameter>


    </config-description>


</binding:binding>